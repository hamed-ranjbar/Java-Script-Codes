// variable Myage holds my age
const myAge = 25;
// early years of dogs life
let earlyYears = 2;
// the calculation of each Year
earlyYears *= 10.5;
// we calculated first two year differently
let laterYears = myAge - 2;
// rest of the calculation
laterYears *= 4;
console.log(earlyYears + laterYears);
// Memorization
let myAgeInDogYears = earlyYears + laterYears;
// store my name in lower case
let myName = 'Hamed'.toLowerCase();
// printing
console.log(`My name is ${myName}.I am ${myAge} years old in human years which is ${myAgeInDogYears} years old in dogs years.`);
